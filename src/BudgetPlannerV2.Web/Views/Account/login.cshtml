@model LoginViewModel
<div class="alert alert-warning">
    @Html.ValidationSummary()
</div>
<div class="row">
    <div class="col">
        @using (Html.BeginForm())
        {
            <div class="form-group text-light">
                @Html.LabelFor(model => model.EmailAddress, new { @class = "text-light" })
                @Html.TextBoxFor(model => model.EmailAddress, new { @class = "form-control bg-primary text-light" })
                @Html.ValidationMessageFor(model => model.EmailAddress)
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Password, new { @class = "text-light" })
                @Html.PasswordFor(model => model.Password, new { @class = "form-control bg-primary text-light" })
                @Html.ValidationMessageFor(model => model.Password)
            </div>
            <input type="submit" value="Login" />
        }
    </div>
    <div class="col">
        <div class="card">
            <h5 class="card-header">Login</h5>
            <div class="card-body">

            </div>
        </div>
    </div>
</div>